<div id="divUsers" class="tab-pane active">
    <table>
        <thead>
        <tr>
            <th colspan="2">User</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Website</th>
        </tr>
        </thead>
        <tbody data-bind="foreach: Users">
        <tr>
            <td>
                <i class="icon-chevron-right"></i>
            </td>
            <td>
                <a data-bind="text: username, attr: { href: '/user/' + id }"></a>
            </td>

            <td data-bind="text: firstName"></td>
            <td data-bind="text: lastName"></td>
            <td>
                <a target="_blank" data-bind="text: website, attr: { href: 'http://' + website }"></a>
            </td>
        </tr>
        </tbody>
    </table>
    <input data-bind="visible: UserSearch.previousVisible()" id="btnPrev" type="button" value="Prev"/>
    <span data-bind="visible: UserSearch.resultsVisible()">
            Page: <span data-bind="text: PageIndex"></span>
    </span>
    <input data-bind="visible: UserSearch.nextVisible()" id="btnNext" type="button" value="Next"/>
</div>

<script type="text/javascript" src="/js/user_search.js"></script>

