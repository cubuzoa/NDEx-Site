<div class="pull-right">
    <a class="ndex-options" href="#searchOptions" data-toggle="modal">
        <i class="icon-cog icon-large"></i>
    </a>
</div>
-->

<div id="divGroups" class="tab-pane active">
    <table>
        <thead>
        <tr data-bind="visible: GroupSearch.resultsVisible()">
            <th colspan="2">Name</th>
            <th></th>
        </tr>
        </thead>
        <tbody data-bind="foreach: Groups">
        <tr>
            <td>
                <i class="icon-chevron-right"></i>
            </td>
            <td>
                <a data-bind="text: name, attr: { href: '/group/' + id }"></a>
            </td>

            <td data-bind="text: organizationName"></td>
        </tr>
        </tbody>
    </table>
    <input data-bind="visible: GroupSearch.previousVisible()" id="btnPrev" type="button" value="Prev"/>
    <span data-bind="visible: GroupSearch.resultsVisible()">
            Page: <span data-bind="text: PageIndex"></span>
    </span>
    <input data-bind="visible: GroupSearch.nextVisible()" id="btnNext" type="button" value="Next"/>

</div>

<script type="text/javascript" src="/js/group_search.js"></script>

<% include footer.ejs %>
