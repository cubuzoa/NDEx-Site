<% include header.ejs %>
<% include navigation.ejs %>

<h1>Find Groups</h1>
<p id="message"></p>
<!-- btn-group from twitter allows for next div to be aligned and pulled right, easy fix-->
<div id="divSearch" class="btn-group">
    <input id="btnSearch" type="button" value="Search"/>
    <input type="text" data-bind=”text: SearchString" name="searchString" id="searchString"/>
</div>

