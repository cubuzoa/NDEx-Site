<div id="divNetworks" class="tab-pane active">
    <table>
        <thead>
        <tr data-bind="visible: NetworkSearch.resultsVisible()">
            <th colspan="2">Name</th>
            <th>Nodes</th>
            <th>Edges</th>
            <th></th>
        </tr>
        </thead>
        <tbody data-bind="foreach: Networks">
        <tr>
            <td>
                <i class="icon-chevron-right"></i>
            </td>
            <td>
                <a data-bind="text: title, attr: { href: '/network/' + id }"></a>
            </td>
            <td class="AlignRight" data-bind="text: nodeCount"></td>
            <td class="AlignRight" data-bind="text: edgeCount"></td>
            <td>
                <div class="btn-group">



                    <a data-bind="attr: { href: '/network/' + id + '/visualize' }" class="btn" target="_blank"
                       title="Visualize network" rel="tooltip">
                        <i class="icon-eye-open"></i>
                    </a>
                </div>
            </td>
        </tr>
        </tbody>
    </table>
    <input data-bind="visible: NetworkSearch.previousVisible()" id="btnPrev" type="button" value="Prev"/>
    <span data-bind="visible: NetworkSearch.resultsVisible()">
            Page: <span data-bind="text: PageIndex"></span>
    </span>
    <input data-bind="visible: NetworkSearch.nextVisible()" id="btnNext" type="button" value="Next"/>

</div>

